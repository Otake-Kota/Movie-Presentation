<li id="movie_comment-<%= movie_comment.id %>">
  <div class="user">
    <%= link_to gravatar_for(movie_comment.user, size: 25), movie_comment.user %>
    <span class="user_name"><%= link_to movie_comment.user.name, movie_comment.user %></span>
  </div>
  <span class="content"><%= movie_comment.comment %></span>
  <span class="timestamp">
    <%= time_ago_in_words(movie_comment.created_at) %>前
    <% if current_user?(movie_comment.user) %>
      <%= link_to "(削除)", movie_comment_destroy_path(movie_comment), method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
