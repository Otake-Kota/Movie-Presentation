<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <p>投稿数: <%= @user.movies.length %></p>
      </h1>
    </section>
    <div class="my_profile">
      <ul>
        <h2>-プロフィール-</h2>
        <li>
          <span>性別: </span>
          <%= @user.gender_id.blank? ? "未設定" : @user.gender.name %>
        </li>
        <li>
          <span>血液型: </span>
          <%= @user.blood_type.blank? ? "未設定" : @user.blood_type.name %>
        </li>
        <li>
          <span>誕生日: </span>
          <%= @user.birthday.blank? ? "未設定" : @user.birthday %>
        </li>
        <li>
          <span>コメント: </span>
          <%= @user.comment.blank? ? "未設定" : @user.comment %>
        </li>
      </ul>
    </div>
  </aside>
  <div class="col-md-8">
    <div class="follow_form">
      <%= render 'follow_form' if logged_in? %>
    </div>
    <% if @user.movies.any? %>
      <ol class="movies">
        <h2>投稿数 (<%= @user.movies.count %>)</h2>
        <%= render @movies %>
      </ol>
      <%= will_paginate @movies, class: "will_paginate" %>
    <% end %>
  </div>
</div>
