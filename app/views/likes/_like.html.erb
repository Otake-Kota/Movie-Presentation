<% if !current_user?(movie.user) %>
    <span class="like">
    <% if movie.iine?(current_user) %>
      <%= form_for(movie.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "はずす", class: "glyphicon glyphicon-heart" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(movie.likes.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :movie_id, movie.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "いいね", class: "glyphicon glyphicon-heart-empty" %>
        <% end %>
      <% end %>
    <% end %>
  </span>
<% end %>
